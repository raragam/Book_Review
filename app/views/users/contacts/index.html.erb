<div class="container mt-4">
  <div class="row">
    <div class="col-md-3">

      <%= render '/users/users/user_info', user: @user %>

      <%= render '/users/users/opinion_post_index' %>

    </div>

    <div class="col-md-8 offset-md-1">

    <h2>管理者からのお知らせ一覧</h2>

    <table class="table">
      <thead>
        <tr>
          <th>タイトル</th>
          <th>投稿日</th>
        </tr>
      </thead>

    <% @contacts.each do |contact| %>

      <tbody>
        <tr>
          <td><%= link_to contact.contact_title, contact_path(contact.id) %></td>
          <td><%= contact.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
      </tbody>

    <% end %>

    </table>

    <div class="pagination justify-content-center">
      <%= paginate(@contacts) %>
    </div>

    </div>
  </div>
</div>