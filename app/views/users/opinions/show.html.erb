

  <% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
    <% end %>

    <div class="container px-5 px-sm-0">

    <div class="row">
      <div class="col-md-3">

  <h1>User info</h1>
 <%= image_tag @user.get_profile_image %>

 <table class="table">
   <tbody>
    <tr></tr>
    <tr>
    <th>name</th>
    <th><%= @user.name %></th>
    </tr>
    <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
    </tr>
   </tbody>
 </table>


   <% if @user == current_user %>

  <div class="row">
  <%= link_to edit_users_user_path(@user), class: 'btn btn-outline-secondary btn-block' do %><i class="fas fa-user-cog"></i><% end %>
  </div>

   <% else %>

   <div class="row">
  <%= link_to edit_users_user_path(@user), class: 'btn btn-outline-secondary btn-block' do %><i class="fas fa-user-cog"></i><% end %>
  </div>

   <% end %>


<h2 class="mt-3">New book</h2>
  <%= form_with model: @opinion_new, url: '/users/opinions', method: :post do |f| %>
  <div class="form-group">
    <div>
      <label>Title</label>
    </div>
    <div>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div>
      <label>Opinion</label>
    </div>
    <div>
      <%= f.text_area :body, class: 'form-control' %>
    </div>
  </div>

    <div class="form-group">

       <%= f.submit 'Create Book', class: 'btn btn-success' %>

    </div>

  <% end %>

  </div>

  <div class="col-md-8 offset-md-1">

    <h2>Book detail</h2>

      <table class="table table-hover table-inverse">

        <tbody>
        <tr>
      <td>
        <%= link_to users_user_path(@user.id) do %>
        <div>
          <%= image_tag @user.get_profile_image %>
        </div>
        <div>
          <%= @user.name %>
        </div>
        <% end %>

      </td>
      <td>
        <%= link_to users_opinion_path(@opinion.id) do %>
        <span><%= @opinion.opinion_title %></span>
        <% end %>
      </td>
      <td>
        <span><%= @opinion.opinion_body %></span>
      </td>

      　<% if @user == current_user %>

      <td>
        <%= link_to "Edit", edit_users_opinion_path(@opinion.id), class: 'btn btn-sm btn-success' %>
      </td>
      <td>
        <%= link_to "Destroy", users_opinion_path(@opinion.id), class: 'btn btn-sm btn-danger', method: :delete, "data-confirm" => "本当に消しますか？" %>
      </td>
      <% else %>
      <% end %>
        </tr>
      </tbody>

      </table>

  <% if @opinion.favorited_by?(current_user) %>
    <p>
      <%= link_to users_opinion_favorites_path(@opinion), method: :delete do %>
        ♥<%= @opinion.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to users_opinion_favorites_path(@opinion), method: :post do %>
        ♡<%= @opinion.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>

      <div>コメントは現在<%= @opinion.opinion_comments.count %>です</div>

      <%= form_with(model:[@opinion, @opinion_comment], url: '/users/opinions/:opinion_id/opinion_comments', method: :post) do |f| %>
      <%= f.text_area :opinion_comment, size: "40x5" %>
      <%= f.submit '送信', class: "btn-sm btn-primary" %>
      <% end %>

<table>
  <thead>
    <tr>
      <th></th>
      <th>コメント投稿者</th>
      <th>コメント内容</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @opinion.opinion_comments.each do |opinion_comment| %>
      <tr>
        <td><%= image_tag opinion_comment.user.get_profile_image(100,100) %></td>
        <td><%= opinion_comment.user.name %></td>
        <td><%= opinion_comment.opinion_comment %></td>
        <td><%#= link_to "削除", users_opinion_opinion_comment(opinion.id), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>


  </div>

  </div>

  </div>

