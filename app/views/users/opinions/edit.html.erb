  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

        <%= render 'layouts/errors', obj: @opinion %>

        <h1>投稿編集画面</h1>

      <%= form_with model: @opinion, url: users_opinion_path(@opinion.id), method: :patch do |f| %>

      <div class="form-group">
        <div>
          <label>投稿のタイトル</label>
        </div>
        <div>
          <%= f.text_field :opinion_title, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div>
          <label>投稿の内容</label>
       </div>
       <div>
          <%= f.text_area :opinion_body, class: 'form-control' %>
       </div>
      </div>

      <div class="form-group">
        <%= f.submit 'この内容に編集します', class: 'btn btn-success' %>
      </div>

 　　 　 <% end %>

      </div>
    </div>
  </div>