<div class="mx-auto" style="width: 1000px;">

 <% if @model == 'user' %>
	<h3 class="mb-5">会員検索 ＝ "<%= @content %>"</h3>
    <%= render 'users/users/users_follow_index' %>
      <div class="text-center m-5">
         <%= link_to "全ての会員一覧", users_users_path, class:"m-3" %>
      </div>
 <% elsif @model == 'opinion' %>
	<h3 class="mb-5">投稿検索 ＝ "<%= @content %>"</h3>
    <%= render 'users/users/opinions_all', opinions: @opinions %>
      <div class="text-center m-5">
         <%= link_to "全ての投稿一覧", users_opinions_path, class:"m-3" %>
      </div>
 <% elsif @model == 'review' %>
	<h3 class="mb-5">投稿記事検索 ＝ "<%= @content %>"</h3>
    <%= render 'users/users/reviews_all', reviews: @reviews %>
      <div class="text-center m-5">
         <%= link_to "全ての記事一覧", users_reviews_path, class:"m-3" %>
      </div>
 <% end %>

</div>