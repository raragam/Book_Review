<div class="mx-auto mt-4" style="width: 600px;">

<%= render 'layouts/errors', obj: @review %>
<h1 class="text-center mt-5 mr-3">投稿記事編集画面</h1>

<%= form_with model: @review, url: review_path(@review.id), method: :patch do |f| %>

  <div class="field mt-4">
    <h4>記事のタイトル</h4>
    <%= f.text_field :review_title, size: 80 %>
  </div>

  <div class="field mt-4">
    <h4>本の名前</h4>
    <%= f.text_field :book_name %>
  </div>

  <div class="field mt-4">
    <h4>本文</h4>
    <%= f.text_area :review_body, size: "83x10" %>
  </div>

  <div class="field mt-4">
    <h4>画像</h4>
    <%= f.file_field :image, placeholder: "本の画像", accept: "image/*", class: 'form-control-file' %>
  </div>

  <div class="field mt-5 ml-5">
    <%= f.submit 'この内容に編集します', class: 'btn btn-primary btn-block' %>
  </div>

<% end %>

</div>