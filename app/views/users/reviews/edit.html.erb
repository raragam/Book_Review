<%= render 'layouts/errors', obj: @review %>
<h1>レビュー記事編集画面</h1>

<%= form_with model: @review, url: users_review_path(@review.id), method: :patch do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :review_title %>

  <h4>本の名前</h4>
  <%= f.text_field :book_name %>

  <h4>画像</h4>
  <%= f.file_field :image, placeholder: "本の画像", accept: "image/*", class: 'form-control-file' %>

  <h4>本文</h4>
  <%= f.text_area :review_body %>

  <%= f.submit '保存' %>

<% end %>