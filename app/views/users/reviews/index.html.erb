<div class="col-md-8 offset-md-1">

<h1>記事一覧</h1>

  <table class="table">

    <thead>
      <tr>
        <th>題材作品</th>
        <th>記事のタイトル</th>
        <th>投稿者名</th>
        <th>投稿日</th>
        <th>コメント数</th>
        <th>ブックマーク数</th>
      </tr>
    </thead>

  <% @reviews.each do |review| %>

        <tbody>
        <tr>
      <td>
      <%= image_tag review.get_image, size: "100x100" %><br>
      <%= review.book_name %>
      </td>
      <td>
        <%= link_to review.review_title, users_review_path(review.id) %>
      </td>
      <td>
        <%= review.user.name %>
      </td>
      <td>
        <%= review.created_at.strftime('%Y/%m/%d') %>
      </td>
      <td><%= review.review_comments.count %></td>
      <td></td>
        </tr>
      </tbody>

  <% end %>

  </table>

  </div>