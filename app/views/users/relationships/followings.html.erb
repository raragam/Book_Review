<div class="mx-auto" style="width: 680px;">

  <% if @user == current_user %>

      <% if @users.present? %>
         <h2 class="text-center mb-5">あなたがフォローしている会員です。</h2>
         <h3>フォロー一覧</h3>
         <%= render '/users/users/users_follow_index', users: @users %>
      <% else %>
         <h2 class="ml-5">あなたは、まだフォローしていません。</h2>
      <% end %>

  <% else %>

      <% if @users.present? %>
         <h2 class="text-center mb-5"><%= @user.name %> さんがフォローしている会員です。</h2>
         <h3>フォロー一覧</h3>
         <%= render '/users/users/users_follow_index', users: @users %>
      <% else %>
         <h2 class="ml-5"><%= @user.name %> さんは、まだフォローしていません。</h2>
      <% end %>

      <div class="text-center m-5">
         <%= @user.name %> さんの<%= link_to "詳細に戻る", users_user_path(@user.id) %>
      </div>

  <% end %>

</div>