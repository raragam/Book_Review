<div class="container mx-auto" style="width: 800px;">

  <%= render '/layouts/errors', obj: @report %>

<h2 class="text-center mb-5">この会員を通報する</h2>

  <%= form_with(model:[@user, @report], url: '/users/'+"#{@user.id}"+'/reports', method: :post) do |f| %>

    <h3>該当URL</h3>
    <%= f.text_field :url, size: 99, class: "mb-3" %>
    <h3>通報理由</h3>
    <%= f.text_area :reason, size: "102x10", class: "mb-3" %>
    <%= f.submit "通報する", class: "btn btn btn-danger btn-block" %>

  <% end %>

 </div>