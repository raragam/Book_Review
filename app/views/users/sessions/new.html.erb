<div class="container mx-auto" style="width: 300px;">

  <h2 class="text-center mt-5 mr-3">ログイン</h2>

    <%= form_with model: @user, url: user_session_path do |f| %>

      <div class="field mt-4">
        <%= f.label :name %><br>
        <%= f.text_field :name, size: 30 %>
      </div>

      <div class="field mt-4">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password", size: 30 %>
      </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mt-2 ml-2">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

      <div class="actions mt-4 mr-2">
        <%= f.submit "この内容でログインします", class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>

      <div class="text-center mt-4 mr-2">
        新規登録していない方は<%= link_to "こちら", new_user_registration_path %>から
      </div>

</div>