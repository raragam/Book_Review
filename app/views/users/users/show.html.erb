  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">

          <%= render '/users/users/info' %>

      <h2 class="mt-3">New book</h2>
  <%= form_with model: @opinion_new, url: '/users/opinions', method: :post do |f| %>

  <div class="form-group">
    <div>
      <label>Title</label>
    </div>
    <div>
      <%= f.text_field :opinion_title, class: 'form-control' %>
    </div>
  </div>


  <div class="form-group">
    <div>
      <label>Opinion</label>
    </div>
    <div>
      <%= f.text_area :opinion_body, class: 'form-control' %>
    </div>
  </div>


  <div class="form-group">

       <%= f.submit 'Create Book', class: 'btn btn-success' %>

    </div>

  <% end %>

   </div>

   <div class="col-md-8 offset-md-1">

     <%= render '/users/users/show_opinions', opinions: @opinions %>

     <%= render '/users/users/show_reviews', reviews: @reviews %>

       </div>

    </div>

    </div>