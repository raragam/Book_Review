  <div class="container mt-4">
    <div class="row">
      <div class="col-md-3">

          <%= render '/users/users/user_info', user: @user %>

          <%= render '/users/users/show_opinion_post' %>

      </div>
      <div class="col-md-8 offset-md-1">

        <%= link_to user_opinion_index_users_user_path(@user), class: 'btn btn-outline-secondary btn-block mt-5 mr-5' do %>
          <i class="fas fa-user-cog">このユーザーの投稿一覧</i>
        <% end %>

        <%= link_to user_review_index_users_user_path(@user), class: 'btn btn-outline-secondary btn-block mt-5 mr-5' do %>
          <i class="fas fa-user-cog">このユーザーの投稿記事一覧</i>
        <% end %>

      </div>
    </div>
  </div>