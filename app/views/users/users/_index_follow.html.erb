  <table class="table">

    <thead>
      <tr>
        <th>登録画像</th>
        <th>登録名</th>
        <th></th>
        <th>フォロー数</th>
        <th>フォロワー数</th>
        <th></th>
      </tr>
    </thead>

    <% @users.each do |user| %>

    <tbody>
      <tr>
        <td>
          <% if user.is_deleted == false %>
            <%= image_tag user.get_profile_image %>
          <% elsif user.is_deleted == true %>
            <img  src="/assets/mark_batsu_illust_898.png" width="85px" />
          <% end %>
        </td>
        <td><%= user.name %></td>
        <td>
          <% if user.is_deleted == false %>
            <%= render "users/relationships/btn", user: user %>
          <% end %>
        </td>
        <td>
          <% if user.is_deleted == false %>
            <%= user.followings.count %>
          <% end %>
        </td>
        <td>
          <% if user.is_deleted == false %>
            <%= user.followers.count %>
          <% end %>
        </td>
        <td>
          <%= link_to "詳細ページ", users_user_path(user.id) %>
        </td>
      </tr>
    </tbody>

    <% end %>

  </table>