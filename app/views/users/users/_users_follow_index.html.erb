  <table class="table">

    <thead>
      <tr>
        <th>登録画像</th>
        <th>登録名</th>
        <th>この会員に対する<br>
            あなたのフォロー状態</th>
        <th>フォロー数</th>
        <th>フォロワー数</th>
        <th></th>
      </tr>
    </thead>

    <% @users.each do |user| %>

    <tbody>
      <tr>
        <td>
          <% if user.is_deleted == false %>
            <%= image_tag user.get_profile_image, width: '85px' %>
          <% elsif user.is_deleted == true %>
            <%= image_tag asset_path("publicdomainq-0066061vap.jpg"), width: '85px' %>
          <% end %>
        </td>
        <td><%= user.name %></td>
        <td>
          <% if user.is_deleted == false %>
          <div class="follow_buttons_<%= user.id %>">
            <%= render partial: "users/relationships/btn", locals: { user: user }  %>
          </div>
          <% end %>
        </td>
        <td>
          <% if user.is_deleted == false %>
            <%= user.followings.count %>
          <% end %>
        </td>
        <td>
          <% if user.is_deleted == false %>
            <%= user.followers.count %>
          <% end %>
        </td>
        <td>
          <%= link_to "詳細ページ", user_path(user.id) %>
        </td>
      </tr>
    </tbody>

    <% end %>

  </table>

  <div class="pagination justify-content-center">
    <%= paginate(@users) %>
  </div>