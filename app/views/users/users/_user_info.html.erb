  <h2>User info</h2>
    <%= image_tag user.get_profile_image %>

  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
      <tr>
        <th>follows</th>
        <th><%= link_to user.followings.count, users_user_followings_path(user) %></th>
      </tr>
      <tr>
        <th>followers</th>
        <th><%= link_to user.followers.count, users_user_followers_path(user) %></th>
      </tr>
      <tr>
        <th>ブックマークしたつぶやき</th>
        <th><%=link_to"お気に入りのつぶやき", opinion_favorites_users_user_path(user) %></th>
      </tr>
      <tr>
        <th>ブックマークした記事</th>
        <th><%=link_to"お気に入り記事", review_favorites_users_user_path(user) %></th>
      </tr>
    </tbody>
 </table>

    <% if user == current_user %>

      <div class="row">

        <%= link_to edit_users_user_path(user), class: 'btn btn-outline-secondary btn-block' do %>
          <i class="fas fa-user-cog">編集ボタン</i>
        <% end %>

        <%= link_to users_user_confirm_unsubscribe_path(user), class: 'btn btn-outline-secondary btn-block' do %>
          <i class="fas fa-user-cog">退会ボタン</i>
        <% end %>

      </div>

    <% else %>

      <div class="row">

        <%= link_to edit_users_user_path(user), class: 'btn btn-outline-secondary btn-block' do %>
          <i class="fas fa-user-cog">編集ボタン</i>
        <% end %>

      </div>

    <% end %>