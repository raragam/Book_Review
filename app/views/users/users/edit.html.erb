  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2 class="text-center mb-5">会員情報編集<br>
                                  （<%= @user.updated_at.strftime('%Y/%m/%d') %>更新）
      </h2>

          <%= render 'layouts/errors', obj: @user %>

      <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>

      <div class="form-group">
        <div>
          <label for="user_name">アカウント名</label>
        </div>
        <div>
          <%= f.text_field :name, autofocus: true, id:"name", class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div>
          <label>メールアドレス</label>
        </div>
        <div>
          <%= f.text_field :email, autofocus: true, id:"email", class: 'form-control email' %>
        </div>
      </div>

      <div class="form-group">
        <div>
          <label>パスワード</label>
        </div>
        <div>
          <%= f.password_field :password, autofocus: true, class: 'form-control password' %>
        </div>
      </div>

      <div class="form-group">
        <div>
          <label>確認用パスワード</label>
        </div>
        <div>
          <%= f.password_field :password_confirmation, autofocus: true, class: 'form-control password' %>
        </div>
      </div>

      <div class="form-group">
        <div>
          <label>登録画像</label>
        </div>
        <div>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: 'form-control-file' %>
        </div>
      </div>

      <div class="form-group">
        <div>
          <label>自己紹介の内容</label>
        </div>
        <div>
          <%= f.text_area :introduction, autofocus: true, id:"introduction", class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div>
          <label>管理者のメッセージ</label>
        </div>
        <div class="mt-4 mb-5">
          <%=safe_join(@user.message.split("\n"),tag(:br)) if @user.message %>
        </div>
      </div>

      <div class="form-group">
          <%= f.submit 'この内容で登録します', class: 'btn btn-secondary btn-block' %>
      </div>

        <% end %>

      </div>
    </div>
  </div>