<div class="mx-auto" style="width: 680px;">

  <% if @user == current_user %>

      <% if @reviews.exists? %>
         <h2 class="text-center mb-5">あなたが、ブックマークした投稿記事です。</h2>
         <%= render '/users/users/reviews_all', reviews: @favorite_reviews %>
      <% else %>
         <h2 class="ml-5">あなたは、まだブックマークしていません。</h2>
      <% end %>

  <% else %>

      <% if @reviews.exists? %>
         <h2 class="text-center mb-5"><%= @user.name %> さんが、ブックマークした投稿記事です。</h2>
         <%= render '/users/users/reviews_all', reviews: @favorite_reviews %>
      <% else %>
         <h2 class="ml-5">あなたは、まだブックマークしていません。</h2>
      <% end %>

  <% end %>

</div>