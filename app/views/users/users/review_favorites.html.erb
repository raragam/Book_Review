  <% if @user == current_user %>

      <% if @favorite_reviews.present? %>
      <div class="mx-auto" style="width: 1400px;">
         <h2 class="text-center mb-5">あなたが、ブックマークした投稿記事です。</h2>
         <%= render '/users/users/reviews_all', reviews: @favorite_reviews %>
         <h4 class="text-center m-5">※一覧から消したいものがあれば、自分のいいねを外して画面をリロードしてください。</h4>
      </div>
      <% else %>
      <div class="mx-auto" style="width: 900px;">
         <h2 class="text-center">あなたは、まだ投稿記事をブックマークしていません。</h2>
      </div>
      <% end %>

      <div class="text-center m-5">
         <%= link_to "マイページに戻る", users_user_path(@user.id) %>
      </div>

  <% else %>

      <% if @favorite_reviews.present? %>
      <div class="mx-auto" style="width: 1400px;">
         <h2 class="text-center mb-5"><%= @user.name %> さんが、ブックマークした投稿記事です。</h2>
         <%= render '/users/users/reviews_all', reviews: @favorite_reviews %>
      </div>
      <% else %>
      <div class="mx-auto" style="width: 900px;">
         <h2 class="text-center"><%= @user.name %> さん は、まだ投稿記事をブックマークしていません。</h2>
      </div>
      <% end %>

      <div class="text-center m-5">
         <%= @user.name %> さんの<%= link_to "詳細に戻る", users_user_path(@user.id) %>
      </div>

  <% end %>

