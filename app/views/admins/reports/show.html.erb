<div class="mx-auto" style="width: 1200px;">

<h2>通報詳細</h2>

<table class="table">
    <tbody>
      <tr>
        <td>通報ID</td>
        <td><%= @report.id %></td>
      </tr>
      <tr>
        <td>通報者</td>
        <td><%= @report.reporter.name %></td>
      </tr>
      <tr>
        <td>通報対象</td>
        <td><%= @report.reported.name %></td>
      </tr>
      <tr>
        <td>通報理由</td>
        <td><%= @report.reason %></td>
      </tr>
      <tr>
        <td>該当URL</td>
        <td><%= @report.url %></td>
      </tr>
      <tr>
        <td>対応ステータス</td>
        <td>
            <%= @report.status_i18n %>
          <%= form_with model:@report, url:admins_report_path(@report), method: :patch, local: true do |f| %>
            <%= f.select :status, Report.statuses.keys.map { |k| [t("enums.report.status.#{k}"), k] }, class:"m-2" %>
            <%= f.submit '更新', class:"m-2" %>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>