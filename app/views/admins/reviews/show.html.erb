<div class="mx-auto mt-4" style="width: 600px;">

  <h4 class="mx-auto text-center mt-4" style="width: 400px;">
    <%= link_to admins_user_path(@review.user.id) do %>
      投稿者：<%= @review.user.name %>
    <% end %>
  </h4>
  <h6 class="mx-auto text-center mt-1" style="width: 400px;">投稿日：<%= @review.created_at.strftime('%Y/%m/%d') %></h6>

    <h1 class="mx-auto mt-4" style="width: 400px;"><%= @review.review_title %></h1>
    <div class="mx-auto mt-4" style="width: 400px;">
      <div>
        <% if @review.image.attached? %>
             <%= image_tag @review.image, size: "400x400" %>
        <% else %>
             <%= image_tag 'no_image', size: "400x400" %>
        <% end %>
      </div>
      <div><h2>原作：<%= @review.book_name %></h2></div>
    </div>

       <h4 class="mx-auto mt-4" style="width: 400px;"><%= @review.review_body %></h4>

       <div class="text-center mt-5">
          <%= link_to "削除", admins_review_path(@review.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"m-3"  %>
          <%= link_to "記事一覧に戻る", admins_reviews_path, class:"m-3" %>
       </div>

       <div class="text-center m-3">
          ♥<%= @review.review_favorites.count %> いいね
       </div>

    <h2 class="mx-auto" style="width: 400px;">コメントは現在<%= @review.review_comments.count %>件です。</h2>

  <table class="table mt-5">
    <thead>
     <tr>
      <th>コメント投稿者</th>
      <th>コメント内容</th>
      <th></th>
      <th>コメント投稿日</th>
     </tr>
   </thead>
   <tbody>
     <% @review.review_comments.each do |review_comment| %>
      <tr>
        <td>
          <%= link_to admins_user_path(review_comment.user.id) do %>
            <%= image_tag review_comment.user.get_profile_image %><br>
            <%= review_comment.user.name %>
          <% end %>
        </td>
        <td><%= review_comment.review_comment %></td>
        <td><%= link_to "削除", admins_review_review_comment_path(@review.id, review_comment.id), method: :delete %></td>
        <td><%= review_comment.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
     <% end %>
   </tbody>
  </table>

</div>