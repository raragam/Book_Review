    <h2>User info</h2>
    <%= image_tag @user.get_profile_image %>

 <table class="table">
   <tbody>
    <tr>
    <th>name</th>
    <td><%= @user.name %></td>
    </tr>
    <tr>
    <th>email</th>
    <td><%= @user.email %></td>
    </tr>
    <tr>
    <th>introduction</th>
    <td><%= @user.introduction %></td>
    </tr>
    <tr>
    <th>会員ステータス</th>
    <% if @user.is_deleted == false %>
    <td>有効</td>
    <% else %>
    <td>退会</td>
    <% end %>
    </tr>
   </tbody>
 </table>

    <div class="row">

       <%= link_to edit_admins_user_path(@user), class: 'btn btn-outline-secondary btn-block' do %>
       <i class="fas fa-user-cog"></i>

     <% end %>
   </div>

   <div class="col-md-8 offset-md-1">

     <%#= render '/users/users/show', opinions: @opinions %>

           <h2>投稿した記事一覧</h2>

      <table class="table table-hover table-inverse">

      <% @reviews.each do |review| %>

      <thead>
      <tr>
        <th>作品名:<%= review.book_name %></th>
        <th>記事のタイトル</th>
        <th>投稿日</th>
      </tr>
    </thead>

    <tbody>
        <tr>
      <td>
      <%= image_tag review.get_image, size: "100x100" %><br>
      </td>
      <td>
      <%= link_to review.review_title, admins_review_path(review.id) %>
      </td>
      <td>
      <%= review.created_at.strftime('%Y/%m/%d') %>
      </td>
        </tr>
      </tbody>

      <% end %>

      </table>

       </div>