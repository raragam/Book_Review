    <h2>User info</h2>
    <%= image_tag @user.get_profile_image %>

 <table class="table">
   <tbody>
    <tr>
    <th>name</th>
    <td><%= @user.name %></td>
    </tr>
    <tr>
    <th>email</th>
    <td><%= @user.email %></td>
    </tr>
    <tr>
    <th>introduction</th>
    <td><%= @user.introduction %></td>
    </tr>
    <tr>
    <th>会員ステータス</th>
    <% if @user.is_deleted == false %>
    <td>有効</td>
    <% else %>
    <td>退会</td>
    <% end %>
    </tr>
   </tbody>
 </table>

    <div class="row">

       <%= link_to edit_admins_user_path(@user), class: 'btn btn-outline-secondary btn-block' do %>
       <i class="fas fa-user-cog"></i>

     <% end %>
   </div>

   <div class="col-md-8 offset-md-1">

     <h2>投稿した意見一覧</h2>

      <table class="table table-hover table-inverse">

      <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <% @opinions.each do |opinion| %>

    <tbody>
        <tr>
      <td>
        <div>
          <%= image_tag @user.get_profile_image %>
        </div>
      </td>
      <td>
        <%= link_to admins_opinion_path(opinion.id) do %>
        <span><%= opinion.opinion_title %></span>
        <% end %>
      </td>
      <td>
        <span><%= opinion.opinion_body %></span>
      </td>
      <td>
        <%#= link_to "Destroy", admins_opinion_path(@opinion.id), class: 'btn btn-sm btn-danger', method: :delete, "data-confirm" => "本当に消しますか？" %>
      </td>
        </tr>
      </tbody>

      <% end %>

      </table>

      <h2>投稿した記事一覧</h2>

      <table class="table table-hover table-inverse">

      <% @reviews.each do |review| %>

      <thead>
      <tr>
        <th>作品名:<%= review.book_name %></th>
        <th>記事のタイトル</th>
        <th>投稿日</th>
      </tr>
    </thead>

    <tbody>
        <tr>
      <td>
      <%= image_tag review.get_image, size: "100x100" %><br>
      </td>
      <td>
      <%= link_to review.review_title, admins_review_path(review.id) %>
      </td>
      <td>
      <%= review.created_at.strftime('%Y/%m/%d') %>
      </td>
        </tr>
      </tbody>

      <% end %>

      </table>

       </div>