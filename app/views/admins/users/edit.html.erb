

      <div class="container">

      <div class="row">

        <diV class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

          <h2>User info</h2>

        <%= render 'layouts/errors', obj: @user %>

    <%= form_with model: @user, url: admins_user_path(@user.id), method: :patch do |f| %>

    <div class="form-group">
      <div>
        <label for="user_name">Name</label>
      </div>
      <div>
      <%= f.text_field :name, autofocus: true, id:"name", class: 'form-control name' %>
    </div>
    </div>
    <div class="form-group">
      <div>
        <label for="user_name">email</label>
      </div>
      <div>
      <%= f.text_field :email, autofocus: true, id:"email", class: 'form-control email' %>
    </div>
    </div>

    <div class="form-group">
    <div>
      <label for="user_image">Image</label>
    </div>
    <div>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: 'form-control-file user_image' %>
    </div>
    </div>

    <div class="form-group">
      <div>
        <label for="user_introduction">Introduction</label>
      </div>
      <div>
        <%= f.text_area :introduction, autofocus: true, id:"introduction", class: 'form-control introduction' %>
      </div>
    </div>

    <div class="form-group">
    <%= f.radio_button :is_deleted, :false %>
    <%= f.label :"有効" %>
    <%= f.radio_button :is_deleted, :true %>
    <%= f.label :"退会" %>
    </div>

    <div class="form-group">

    <%= f.submit 'Update User', class: 'btn btn-secondary' %>

  </div>

    <% end %>

      </diV>

      </div>

      </div>