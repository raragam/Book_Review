　<div class="container">
　  <div class="row">
　    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    <h2>会員情報編集</h2>

        <%= render 'layouts/errors', obj: @user %>

    <%= form_with model: @user, url: admins_user_path(@user.id), method: :patch do |f| %>

    <div class="form-group">
      <div>
        <label>登録名</label>
      </div>
      <div>
        <%= f.text_field :name, autofocus: true, id:"name", class: 'form-control name' %>
      </div>
    </div>

    <div class="form-group">
      <div>
        <label>メールアドレス</label>
      </div>
      <div>
        <%= f.text_field :email, autofocus: true, id:"email", class: 'form-control email' %>
      </div>
    </div>

    <div class="form-group">
      <div>
        <label>登録画像</label>
      </div>
      <div>
         <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: 'form-control-file user_image' %>
      </div>
    </div>

    <div class="form-group">
      <div>
        <label>自己紹介の内容</label>
      </div>
      <div>
         <%= f.text_area :introduction, autofocus: true, id:"introduction", class: 'form-control introduction' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.radio_button :is_deleted, :false %>
          <%= f.label :"有効" %>
      <%= f.radio_button :is_deleted, :true %>
          <%= f.label :"退会" %>
    </div>

    <div class="form-group">
      <%= f.submit 'Update User', class: 'btn btn-secondary' %>
    </div>

    <% end %>

      </div>
    </div>
  </div>