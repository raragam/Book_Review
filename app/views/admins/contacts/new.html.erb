<div class="mx-auto mt-4" style="width: 600px;">

  <%= render '/layouts/errors', obj: @contact %>

  <h1 class="text-center mt-5 mr-3">管理人からの通達</h1>

    <%= form_with model: @contact, url: '/admins/contacts', method: :post, local: true do |f| %>

    <div class="field mt-4">
      <h4>通達のタイトル</h4>
      <%= f.text_field :contact_title, size: 80 %>
    </div>

    <div class="field mt-4">
    <h4>本文</h4>
    <%= f.text_area :contact_body, size: "83x10" %>
    </div>

    <div class="field mt-5 ml-5">
      <%= f.submit 'この内容の通達を投稿します', class: 'btn btn-primary btn-block' %>
    </div>

    <% end %>

</div>