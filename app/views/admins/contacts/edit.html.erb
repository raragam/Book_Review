<div class="mx-auto mt-4" style="width: 600px;">

  <%= render 'layouts/errors', obj: @contact %>

  <h1 class="text-center mt-5 mr-3">お知らせ編集画面</h1>

  <%= form_with model: @contact, url: admins_contact_path(@contact.id), method: :patch do |f| %>

    <div class="field mt-4">
      <h4>お知らせのタイトル</h4>
      <%= f.text_field :contact_title, size: 80 %>
    </div>

    <div class="field mt-4">
    <h4>本文</h4>
    <%= f.text_area :contact_body, size: "83x10" %>
    </div>

    <div class="field mt-5 ml-5">
      <%= f.submit 'この内容に編集します', class: 'btn btn-primary btn-block' %>
    </div>

  <% end %>

    <div class="text-center mt-5">
      <%= link_to "詳細画面に戻る", admins_contact_path(@contact.id), class:"m-3" %>
    </div>

</div>